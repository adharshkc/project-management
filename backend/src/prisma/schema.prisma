generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique 
  name     String
  password String
  projects Project[]
}

model Project {
  id     Int    @id @default(autoincrement())
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  todos Todo[]
}

model Todo {
  id Int @id @default(autoincrement())
  name String
  description String?
  status String @default("todo")
  project Project @relation(fields: [projectId], references: [id])
  projectId Int 
}